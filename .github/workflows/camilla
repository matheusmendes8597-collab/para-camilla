<script>
function fuja() {
  var botaoNao = document.getElementById("nao");
  var larguraJanela = window.innerWidth;
  var alturaJanela = window.innerHeight;

  // Limitar para que o bot√£o nunca ultrapasse a tela
  var maxX = larguraJanela - botaoNao.offsetWidth - 10;
  var maxY = alturaJanela - botaoNao.offsetHeight - 10;

  // Garante que o bot√£o n√£o ultrapasse o painel
  var painel = document.querySelector('.painel');
  if (painel) {
    var painelRect = painel.getBoundingClientRect();
    maxX = Math.min(maxX, painelRect.right - botaoNao.offsetWidth);
    maxY = Math.min(maxY, painelRect.bottom - botaoNao.offsetHeight);
  }

  var aleatorioX = Math.floor(Math.random() * maxX);
  var aleatorioY = Math.floor(Math.random() * maxY);

  botaoNao.style.left = aleatorioX + "px";
  botaoNao.style.top = aleatorioY + "px";
}
</script>

